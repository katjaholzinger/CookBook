<!-- Base application theme. -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- inherit from the AppCompat theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_light</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <!--costumeButtonStyle-->
        <item name="buttonStyle">@style/CostumeButton</item>

        <!--Colors for Ratingbar-->
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_dark</item>
    </style>


    <style name="CustomeDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:titleTextStyle">@style/HeadingTextStyle</item>
    </style>

    <style name="CostumeButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
